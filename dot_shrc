__format_ps1_cwd() {
  case $PWD in
    "$HOME") echo '~' ;;
    /) echo / ;;
    *) echo ${PWD##*/} ;;
  esac
}

__format_ps1_last_error() {
  if [ "$1" -ne 0 ]; then
    echo " ($1)"
  fi
}

# interactive mode settings go here
case "$-" in *i*)
  set -o emacs
  set -o tabcomplete
  set -o promptcmds
  PS1="[$my_user@$my_hostname \$(__format_ps1_cwd)\$(__format_ps1_last_error \$?)]\$ "
  ;;
esac

# vim: set filetype=sh:
