{{ if eq .chezmoi.os "windows" -}}
@echo off

setx POWERSHELL_TELEMETRY_OPTOUT 1 >nul
setx POWERSHELL_UPDATECHECK Off >nul
setx PYTHONSTARTUP %USERPROFILE%\Documents\Python\python_startup.py >nul

rem powershell -NoProfile -ExecutionPolicy Bypass ^
rem   -File %USERPROFILE%\Documents\Privoxy\startup_shortcut.ps1

<%APPDATA%\GHISLER\wincmd.ini chezmoi execute-template ^
  --with-stdin ^
  --file {{ joinPath .chezmoi.sourceDir ".chezmoitemplates/wincmd_ini" }} ^
  --output %APPDATA%\GHISLER\wincmd.ini.new
move /y %APPDATA%\GHISLER\wincmd.ini.new %APPDATA%\GHISLER\wincmd.ini >nul

<%LOCALAPPDATA%\Packages\Microsoft.WindowsTerminal_8wekyb3d8bbwe\LocalState\settings.json ^
chezmoi execute-template ^
  --with-stdin ^
  --file {{ joinPath .chezmoi.sourceDir ".chezmoitemplates/WindowsTerminal" }} ^
  --output %LOCALAPPDATA%\Packages\Microsoft.WindowsTerminal_8wekyb3d8bbwe\LocalState\settings.json.new
move /y ^
  %LOCALAPPDATA%\Packages\Microsoft.WindowsTerminal_8wekyb3d8bbwe\LocalState\settings.json.new ^
  %LOCALAPPDATA%\Packages\Microsoft.WindowsTerminal_8wekyb3d8bbwe\LocalState\settings.json >nul

pushd %APPDATA%\Mozilla\SeaMonkey\Profiles\Clean && rd /s /q . 2>nul && popd

<%APPDATA%\Mozilla\SeaMonkey\profiles.ini chezmoi execute-template ^
  --with-stdin ^
  --file {{ joinPath .chezmoi.sourceDir ".chezmoitemplates/profiles_ini" }} ^
  --output %APPDATA%\Mozilla\SeaMonkey\profiles.ini.new
move /y %APPDATA%\Mozilla\SeaMonkey\profiles.ini.new %APPDATA%\Mozilla\SeaMonkey\profiles.ini >nul

